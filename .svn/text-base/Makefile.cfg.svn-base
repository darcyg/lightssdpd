COMPILER_PREFIX =
CC = $(COMPILER_PREFIX)gcc
CPP = $(COMPILER_PREFIX)g++
LD = $(COMPILER_PREFIX)ld
AR = $(COMPILER_PREFIX)ar -cru
STRIP = $(COMPILER_PREFIX)strip
RM = rm -rf
MAKE = make
CP = cp -rf
MKDIR = mkdir -p
CFLAGS = -O2

#support convert coding to utf
ENABLE_CONVERT_CODING = 1

#libuchardet headers directory and libiconv headers directory
CFLAGS += -I/media/sf_share/IHOME_SDK/include

#libuchardet libs directory and libiconv libs directory
LDFLAGS	= -L/media/sf_share/IHOME_SDK/lib

#install directory
INSTALL_DIR = /media/sf_share/IHOME_SDK

